<form>
    <div class="form-group">
        <label>{{localize "mastercrafted.recipeApp.editcreatebook.name"}}</label>
        <div class="form-fields">
            <input type="text" name="name" placeholder="{{localize "mastercrafted.recipeApp.editcreatebook.namep"}}" value="{{name}}" autofocus="">
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "mastercrafted.recipeApp.editcreatebook.description"}}</label>
        <div class="form-fields">
            <textarea type="text" name="description">{{description}}</textarea>
        </div>
    </div>

    <div class="form-group">
            <label for="texture.src">{{localize "mastercrafted.recipeApp.editcreatebook.image"}}</label>
            <div class="form-fields">
                {{filePicker target="img" type="image"}}
                <input type="text" class="image" name="img" value="{{img}}">
            </div>
    </div>

    <div class="form-group">
        <label for="sound">{{localize "mastercrafted.recipeApp.editcreatebook.sound"}}</label>
        <div class="form-fields">
            {{filePicker target="sound" type="audio"}}
            <input type="text" name="sound" value="{{sound}}">
        </div>
    </div>

    <div class="form-group">
            <label>{{localize "mastercrafted.recipeApp.editcreatebook.tools"}}</label>
            <div class="form-fields">
                <input type="text" name="tools" placeholder="{{localize "mastercrafted.recipeApp.editcreatebook.toolsplaceholder"}}" value="{{tools}}">
            </div>
    </div>

    <div class="form-group">
        <label>{{localize "mastercrafted.recipeApp.recipeconfig.ingredientsInspection"}}</label>
        <div class="form-fields">
            <select name="ingredientsInspection">
                {{selectOptions choices selected=ingredientsInspection localize=true}}
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>{{localize "mastercrafted.recipeApp.recipeconfig.productInspection"}}</label>
        <div class="form-fields">
            <select name="productInspection">
                {{selectOptions choices selected=productInspection localize=true}}
            </select>
        </div>
    </div>
    {{#if isRecipe}}
            <div class="form-group">
                <label>{{localize "mastercrafted.recipeApp.editcreatebook.macro"}}</label>
                <div class="form-fields">
                    <input type="text" name="macroName" placeholder="{{localize "mastercrafted.recipeApp.editcreatebook.macroplaceholder"}}" value="{{macroName}}">
                </div>
            </div>
            <div class="form-group">
                <label>{{localize "mastercrafted.recipeApp.editcreatebook.time"}}</label>
                <div class="form-fields">
                    <input type="number" name="time" placeholder="{{localize "mastercrafted.recipeApp.editcreatebook.timeplaceholder"}}" value="{{time}}">
                </div>
            </div>
    {{/if}}
    <hr>
    <h4><i class="fas fa-users"></i> {{localize "mastercrafted.recipeApp.editcreatebook.permission"}}</h4>
    <hr>
    
    {{#each users}}
    <div class="form-group">
        <label>{{this.name}}</label>
        <div class="form-fields">
            <select name="ownership.{{this.id}}">
                {{selectOptions ../choices selected=this.permission localize=true}}
            </select>
        </div>
    </div>
    {{/each}}
    

    <button type="submit"><i class="fas fa-check"></i> {{localize "mastercrafted.recipeApp.editcreatebook.confirm"}}</button>
</form>